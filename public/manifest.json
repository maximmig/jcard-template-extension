{
  "manifest_version": 3,
  "name": "J-Card Template Extension",
  "short_name": "J-Card",
  "description": "Import releases into the template from popular services such as Bandcamp, Discogs, etc.",
  "version": "1.0",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://unixispower.gitlab.io/jcard-template/*",
    "https://www.discogs.com/*",
    "https://*.bandcamp.com/*"
  ]
}
